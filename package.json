{
  "name": "journalize",
  "version": "2.0.0-beta",
  "description": "A collection of functions useful for making prose more reader friendly. Inspired by Django's `django.contrib.humanize`.",
  "source": "src/index.js",
  "module": "dist/journalize.es.js",
  "main": "dist/journalize.js",
  "umd:main": "dist/journalize.umd.js",
  "files": [
    "dist",
    "README.md",
    "src"
  ],
  "scripts": {
    "build": "microbundle",
    "docs:build": "documentation readme --readme-file README.md --section 'API Docs' ./src/index.js && prettier --write README.md",
    "docs:serve": "documentation serve --watch ./src/index.js",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest",
    "test:cov": "npm run test -- --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "npm run test -- --watch",
    "watch": "microbundle watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdmurphy/journalize.git"
  },
  "keywords": [
    "normalization",
    "journalism",
    "humanity",
    "editing",
    "prose"
  ],
  "author": "Ryan Murphy <ryan@rdmurphy.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdmurphy/journalize/issues"
  },
  "homepage": "https://github.com/rdmurphy/journalize#readme",
  "devDependencies": {
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "documentation": "^5.4.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "microbundle": "^0.4.4",
    "prettier": "1.10.2"
  },
  "dependencies": {},
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
