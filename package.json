{
  "name": "journalize",
  "version": "2.0.0-dev",
  "description": "A collection of functions useful for making prose more reader friendly. Inspired by Django's `django.contrib.humanize`.",
  "main": "dist/journalize.cjs.js",
  "jsnext:main": "dist/journalize.es.js",
  "module": "dist/journalize.es.js",
  "browser": "dist/journalize.umd.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup --config && npm run build:minify",
    "prebuild": "npm run clean",
    "build:minify": "uglifyjs dist/journalize.umd.js --compress --mangle --output ./dist/journalize.umd.min.js",
    "clean": "rimraf dist/",
    "docs:build": "documentation readme --readme-file README.md --section 'API Docs' ./src/index.js",
    "docs:serve": "documentation serve --watch ./src/index.js",
    "format": "prettier --single-quote --write \"src/**/*.js\"",
    "prepublish-x": "npm run clean && npm run lint && npm run test && npm run build",
    "test": "jest",
    "test:cov": "npm run test -- --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdmurphy/journalize.git"
  },
  "keywords": [
    "normalization",
    "journalism",
    "humanity",
    "editing",
    "prose"
  ],
  "author": "Ryan Murphy <hey@ryan.fail>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdmurphy/journalize/issues"
  },
  "homepage": "https://github.com/rdmurphy/journalize#readme",
  "devDependencies": {
    "babel-jest": "^20.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.7.4",
    "coveralls": "^2.11.9",
    "documentation": "^4.0.0-beta2",
    "jest": "^20.0.0",
    "mkdirp": "^0.5.1",
    "prettier": "^1.3.1",
    "rimraf": "^2.5.2",
    "rollup": "^0.41.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "uglify-js": "^2.6.2"
  }
}
